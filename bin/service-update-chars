#!/usr/bin/env bash

export CORE_HOME=${CORE_HOME:-/home/core/brave/core}
export KEY_UPDATE_HOURS=${KEY_UPDATE_HOURS:-6}
export CONF_LOCATION=${CONF_LOCATION:-conf/production.ini}

cd $CORE_HOME

# are we in a virtualenv?
python -c 'import sys; print sys.real_prefix' 2>/dev/null && INVENV=1 || INVENV=0

# if not, activate it
if [[ "$INVENV" != "1" ]]
then
    # Activate the virtual env
    . ../bin/activate
fi

paster shell $CONF_LOCATION update_chars.py
